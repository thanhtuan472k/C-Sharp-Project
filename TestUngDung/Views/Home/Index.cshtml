                            <div class="slider-text">
                                <h1>Clearance<br><span>SALE</span></h1>
                                <h2>UPTo 10% OFF</h2>
                                <div class="features_list">
                                    <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                                </div>
                                <a href="preview.html" class="button">Shop Now</a>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Tất Cả Sản Phẩm</h3>
        </div>
        <div class="see">
            <p><a href="#">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in listNewProducts)
        {
        <div class="grid_1_of_4 ~/Public/assets/client/images_1_of_4">
            <a href="priview.html"><img src="@item.ImageProduct" alt="@item.NameProduct" /></a>
            <h2>@item.NameProduct</h2>
            <div class="price-details">
                <div class="price-number">
                    <p><span class="rupees">
                        @{ var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                        var unitCost = String.Format(info, "{0:c0}", item.UnitCost); }
                        @Html.DisplayFor(modelItem => unitCost)
                </span></p>
                </div>
                <div class="add-cart">
                    <h4><a href="preview.html">Thêm vào giỏ hàng</a></h4>
                </div>
                <div class="clear"></div>
            </div>
            </div>
            }
        </div>
       </div>