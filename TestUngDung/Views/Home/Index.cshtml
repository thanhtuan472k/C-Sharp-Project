            <div class="slider">
                <div id="slider">
                    <div id="mover">
                        <div id="slide-1" class="slide">
                            <div class="slider-img">
                                <a href="preview.html"><img src="~/Public/assets/client/images/slide-1-image.jpg" alt="learn more" /></a>
