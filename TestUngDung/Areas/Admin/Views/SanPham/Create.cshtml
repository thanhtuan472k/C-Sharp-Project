@model ModelEF.Model.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Thêm Mới Sản Phẩm</h2>

@using (Html.BeginForm("Create", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label>Mã SP</label>
        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Loại SP </label>
        @Html.DropDownList("IDCategory", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IDCategory, "", new { @class = "text-danger" })
        </div>
   
    <div class="form-group">
        <label>Tên Sản Phẩm</label>
        
        @Html.EditorFor(model => model.NameProduct, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NameProduct, "", new { @class = "text-danger" })
    </div>
   
    <div class="form-group">
        <label>Giá</label>
        @Html.EditorFor(model => model.UnitCost, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UnitCost, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
       <lable>Số Lượng</lable>
        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
    </div>

    <div>
        <input for="files" type="file" name="Image" id="Image" class="bg-blue text-dark" />
    </div>
    

    <div class="form-group">
        <lable>Mô Tả</lable>
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>

    <div class="form-group">
        <lable>Trạng Thái</lable>
       
        @Html.EditorFor(model => model.StatusProduct, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.StatusProduct, "", new { @class = "text-danger" })
    </div>
 
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
 
}

<div>
    @Html.ActionLink("Quay Lại", "Index")
</div>
